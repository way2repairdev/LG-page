{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Configure CMake",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S",
				".",
				"-B",
				"build",
				"-G",
				"MinGW Makefiles"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Configure the CMake project for MinGW"
		},
		{
			"label": "Build Project",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"Way2RepairLoginSystem"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"dependsOn": "Configure CMake",
			"detail": "Build the Way2RepairLoginSystem executable"
		},
		{
			"label": "Clean Build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"clean"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Clean the build directory"
		},
		{
			"label": "Run Application",
			"type": "shell",
			"command": ".\\build\\Way2RepairLoginSystem.exe",
			"group": "test",
			"isBackground": false,
			"dependsOn": "Build Project",
			"detail": "Run the Way2RepairLoginSystem application"
		},
		{
			"label": "Build and Run",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build Project",
				"Run Application"
			],
			"group": "test",
			"detail": "Build and run the application"
		},
		{
			"label": "Local CMake Build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"Way2RepairLoginSystem"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Local CMake Build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"Way2RepairLoginSystem"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Build Project",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"Way2RepairLoginSystem"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Build Project",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"Way2RepairLoginSystem"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Run Application",
			"type": "shell",
			"command": ".\\build\\Way2RepairLoginSystem.exe",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Run exe once",
			"type": "shell",
			"command": ".\\build\\Way2RepairLoginSystem.exe",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "Build Once",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"Way2RepairLoginSystem"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "One-off Build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"Way2RepairLoginSystem"
			],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Safe Build (kill and build)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"taskkill /IM Way2RepairLoginSystem.exe /F 2>$null; cmake --build build --target Way2RepairLoginSystem"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Safe Run (kill and run)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"taskkill /IM Way2RepairLoginSystem.exe /F 2>$null; .\\build\\Way2RepairLoginSystem.exe"
			],
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "One-off Build (agent)",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--target",
				"Way2RepairLoginSystem"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}